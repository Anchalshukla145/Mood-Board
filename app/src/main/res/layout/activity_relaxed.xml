<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relaxedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ECEFF1">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sadToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1BCE2"
        android:title="Feeling Sad ðŸ˜¢"
        android:titleTextColor="#000000" />
    <TextView
        android:id="@+id/relaxedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feeling Relaxed ðŸ˜Œ"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editRelaxNote"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_edittext"
        android:hint="What helped you relax?"
        android:gravity="top|start"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnRelaxReflect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reflect"
        android:backgroundTint="#CFD8DC"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnPlayCalmMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Calm Music"
        android:backgroundTint="#B0BEC5"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnNatureVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch Nature Video"
        android:backgroundTint="#B3E5FC"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnStretch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stretch Gently"
        android:backgroundTint="#DCEDC8"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get a Reflection Prompt"
        android:backgroundTint="#D1C4E9"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textRelaxResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="#2E7D32"
        android:visibility="gone"
        android:background="#F1F8E9"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#3E2723"
        android:padding="10dp"
        android:visibility="gone"
        android:background="#E0F2F1"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/relaxEmojiBurst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnRelaxAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What would help now?"
        android:backgroundTint="#90A4AE"
        android:textColor="#FFFFFF" />

</LinearLayout>
